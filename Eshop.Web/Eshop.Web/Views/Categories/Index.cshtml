@model List<Eshop.Web.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" href="/Categories/Create">➕ Add New Category</a>
</p>
<p>
    <a class="btn btn-primary" href="/products">Back to products</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Όνομα</th>
            <th>Περιγραφή</th>
            <th>Ενέργεια</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Categories/Edit/@category.Id">Edit</a>
                        <a href="/Categories/Delete/@category.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
