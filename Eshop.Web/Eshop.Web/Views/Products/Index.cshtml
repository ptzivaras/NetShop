@model Eshop.Web.ViewModels.ProductsListViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>All Products</h2>
        </div>
        <div class="col-md-4 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Product
                </a>
            }
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="q" value="@ViewBag.Query" class="form-control me-2" placeholder="Search products..." />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <select name="categoryId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat.Id" selected="@(ViewBag.CategoryId == cat.Id)">@cat.Name</option>
                    }
                </select>
            </form>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @foreach (var product in Model.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="@product.ImagePath" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    }
                    else if (product.ImageBytes != null)
                    {
                        <img src="data:@product.ImageContentType;base64,@Convert.ToBase64String(product.ImageBytes)" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-truncate">@product.Description</p>
                        <p class="card-text">
                            <strong>â‚¬@product.Price.ToString("F2")</strong>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Stock: @product.StockQuantity</small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-q="@ViewBag.Query" asp-route-categoryId="@ViewBag.CategoryId">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
