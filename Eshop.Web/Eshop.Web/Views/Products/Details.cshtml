@model Eshop.Web.ViewModels.ProductViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" class="img-fluid rounded" alt="@Model.Name" />
            }
            else if (Model.ImageBytes != null)
            {
                <img src="data:@Model.ImageContentType;base64,@Convert.ToBase64String(Model.ImageBytes)" class="img-fluid rounded" alt="@Model.Name" />
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                    <span class="text-muted fs-3">No Image Available</span>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">Category: @Model.CategoryName</p>
            <hr />
            <p>@Model.Description</p>
            <h3 class="text-primary">â‚¬@Model.Price.ToString("F2")</h3>
            <p>
                <strong>Stock:</strong> 
                @if (Model.StockQuantity > 0)
                {
                    <span class="badge bg-success">@Model.StockQuantity units available</span>
                }
                else
                {
                    <span class="badge bg-danger">Out of Stock</span>
                }
            </p>
            <hr />
            <div class="d-grid gap-2">
                @if (Model.StockQuantity > 0)
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="number" name="quantity" value="1" min="1" max="@Model.StockQuantity" class="form-control mb-2" />
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg w-100" disabled>Out of Stock</button>
                }
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Products</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Product</a>
                }
            </div>
        </div>
    </div>
</div>
