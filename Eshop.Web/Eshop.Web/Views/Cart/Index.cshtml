@model Eshop.Web.ViewModels.ShoppingCartViewModel

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null || Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-responsive table-hover align-middle mb-0 products-table">
        <thead>
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Quantity</th>
                <th scope="col" class="text-nowrap">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr data-product-row>
                    <td class="prod-info">@item.ProductName</td>

                    <td class="prod-info">
                        <form asp-action="Decrease" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button class="btn btn-sm btn-outline-secondary" title="Decrease">−</button>
                        </form>

                        <span class="mx-2">@item.Quantity</span>

                        <form asp-action="Increase" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button class="btn btn-sm btn-outline-secondary" title="Increase">+</button>
                        </form>
                    </td>

                    <td class="prod-info">@item.Subtotal.ToString("F2") €</td>
                </tr>
            }
        </tbody>
    </table>
    <p><strong>Total: </strong> @Model.TotalCost €</p>

    <div class="d-flex gap-2 mb-3">
        <form asp-controller="Cart" asp-action="PlaceOrder" method="post">
            <button type="submit" class="btn btn-outline-success">Place Order</button>
        </form>
        <form>
            <button class="btn btn-outline-danger">Clear Order</button>
        </form>
    </div>
}

@section Scripts {
    <style>
        td .btn {
            line-height: 1.1;
        }

        .prod-thumb {
            width: 64px;
            height: 64px;
            object-fit: cover;
            border-radius: .375rem;
            flex-shrink: 0;
        }

        .prod-info {
            max-width: 420px;
            white-space: normal !important;
        }

        .table thead.table-light {
            --bs-table-bg: #f6f9ff;
        }

            .table thead.table-light th {
                background-color: #f6f9ff !important;
            }

        .table.table-bordered > :not(caption) > * > * {
            border-color: #e6ebf3;
        }

        .table > :not(caption) > * > * {
            border-bottom-color: #e6ebf3;
        }

        .products-table thead th {
            background-color: #fff;
            color: var(--bs-primary, #0d6efd);
            font-weight: 600;
        }
    </style>
}
